{
  "name": "demo",
  "version": "1.0.0",
  "description": "Demo & Examples",
  "main": "index.js",
  "scripts": {
    "build": "npm run tsc",
    "web-url": "wsk action get demo/demo-action --url",
    "build:bundle": "nodemon -e ts --watch '../**/*.ts' --exec 'npm run deploy-dev'",
    "build:js": "nodemon -e ts --watch '../**/*.ts' --exec 'npm run build-js'",
    "build-js": "npm run build && npm run copy-js",
    "copy-js": "cp dist/demo/src/demo-action.js ./index.js && cp dist/common/src/*.js ./js",
    "tsc": "tsc",
    "bundle": "webpack --config webpack.config.js",
    "deploy": "npm run build && npm run bundle && npm run wskdeploy",
    "deploy-dev": "npm run deploy --package=demo --env=dev",
    "deploy-dev-api": "npm run deploy --package=demo --env=dev --api=true",
    "deploy-stage": "npm run deploy --package=demo --env=stage",
    "deploy-stage-api": "npm run deploy --package=demo --env=stage --api=true",
    "deploy-js": "npm run build-js && bin/clean.js && bin/deploy.js",
    "deploy-stage-js": "npm run deploy-js --task=deployJS --package=demo --env=stage",
    "deploy-stage-js-api": "npm run deploy --task=deployJS --package=demo --env=stage --api=true",
    "wskdeploy": "bin/deploy.js",
    "switch-account": "bin/switch-account.js"
  },
  "author": "ljeff@us.ibm.com",
  "license": "ISC",
  "dependencies": {
    "rxjs": "^7.4.0"
  },
  "devDependencies": {
    "@types/node": "^16.4.12",
    "@typescript-eslint/parser": "^4.29.0",
    "awesome-typescript-loader": "^5.2.1",
    "copy-webpack-plugin": "^10.0.0",
    "dotenv": "^10.0.0",
    "jsonfile": "^6.1.0",
    "nodemon": "^2.0.12",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.1.0",
    "typescript": "^4.5.2",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2",
    "webpack-node-externals": "^3.0.0"
  }
}
